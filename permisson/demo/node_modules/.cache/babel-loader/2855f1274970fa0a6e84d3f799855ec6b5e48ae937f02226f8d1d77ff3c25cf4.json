)\r\n      .then((response) => {\r\n        // // 上传成功后显示文件 ID\r\n        // uploadStatus.value = `Upload successful! File ID: ${response[0].title}`;\r\n        message.success('Files uploaded successfully!');\r\n        console.log(response);\r\n      })\r\n      .catch((error) => {\r\n        // 上传失败处理\r\n        uploadStatus.value = 'Upload failed!';\r\n        message.error('File upload failed!');\r\n        console.error(error);\r\n      });\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n.uip {\r\n  height: 200px;\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n}\r\n</style>\r\n"],"mappings":";;EACOA,KAAK,EAAC;AAAK;;EAUTA,KAAK,EAAC;AAAsB;;;uBAVnCC,mBAAA,CAqBM,OArBNC,UAqBM,GApBJC,YAAA,CAiBmBC,2BAAA;IAhBTC,QAAQ,EAAEC,MAAA,CAAAD,QAAQ;IAHhC,qBAAAE,MAAA,QAAAA,MAAA,MAAAC,MAAA,IAGwBF,MAAA,CAAAD,QAAQ,GAAAG,MAAA;IAC1BC,IAAI,EAAC,MAAM;IACXC,MAAM,EAAC,QAAQ;IACdC,QAAQ,EAAE,IAAI;IACdC,QAAM,EAAEN,MAAA,CAAAO,YAAY;IACpBC,MAAI,EAAER,MAAA,CAAAS,UAAU;IAChBC,KAAK,EAAE;MAAAC,KAAA;MAAAC,MAAA;IAAA;;IATdC,OAAA,EAAAC,QAAA,CAWM,MAEI,CAFJC,mBAAA,CAEI,KAFJC,UAEI,GADFnB,YAAA,CAA+BG,MAAA,mB,6BAEjCe,mBAAA,CAAwE;MAArErB,KAAK,EAAC;IAAiB,GAAC,2CAAyC,sB,0BACpEqB,mBAAA,CAGI;MAHDrB,KAAK,EAAC;IAAiB,GAAC,0GAG3B,qB;IAlBNuB,CAAA;6DAqBIF,mBAAA,CAAoB;IAAjBG,EAAE,EAAC;EAAQ,GAAC,GAAC,qB","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}